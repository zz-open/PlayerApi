{
  "name": "player-api",
  "version": "1.0.0",
  "description": "music api, just only use it myself",
  "type": "module",
  "exports": "./index.js",
  "scripts": {
    "test": "mocha",
    "watch": "pnpm run dev",
    "serve": "pnpm run dev",
    "dev": "cross-env NODE_ENV=development dotenvx run -f .env.local -f .env.common -- node index.js",
    "preview": "cross-env NODE_ENV=production dotenvx run -f .env -f .env.common  -- node index.js",
    "start": "cross-env NODE_ENV=production dotenvx run -f .env -f .env.common -- nodemon index.js",
    "check": "npm-check-updates",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "upgrade": "npm-check-updates -u",
    "prepare": "if [[ $NODE_ENV != \"production\" ]]; then husky install; fi"
  },
  "keywords": [
    "nodejs",
    "企鹅音乐",
    "音乐",
    "网易云音乐",
    "koa2"
  ],
  "author": "仔仔",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zz-open/player-api/issues"
  },
  "homepage": "https://github.com/zz-open/player-api#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zz-open/player-api.git"
  },
  "dependencies": {
    "@jixun/qmweb-sign": "1.0.4",
    "@koa/cors": "^5.0.0",
    "await-to-js": "^3.0.0",
    "axios": "^1.7.7",
    "babel-plugin-transform-import-meta": "^2.2.1",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "es-toolkit": "^1.19.0",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^13.0.1",
    "qs": "6.13.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-modules-commonjs": "^7.24.8",
    "@babel/preset-env": "^7.25.4",
    "@dotenvx/dotenvx": "^1.14.1",
    "chalk": "^5.3.0",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "mocha": "^10.7.3",
    "nodemon": "^3.1.4",
    "npm-check-updates": "^17.1.1",
    "@antfu/eslint-config": "^3.6.0"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "prettier --write",
      "eslint --cache --fix",
      "git add"
    ],
    "*.{md,html,json}": [
      "prettier --write",
      "git add"
    ]
  }
}